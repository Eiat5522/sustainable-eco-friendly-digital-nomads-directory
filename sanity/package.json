  "engines": {
    "node": ">=18.0.0"
  },
  "security": {
    "csp": {
      "enable": true,
      "policies": {
        "script-src": ["'self'", "'unsafe-inline'"],
        "style-src": ["'self'", "'unsafe-inline'"],
        "img-src": ["'self'", "data:", "https:"],
        "connect-src": ["'self'", "https://api.sanity.io"]
      }
    },
    "corsOrigins": ["http://localhost:3000", "https://*.your-production-domain.com"],
    "apiVersion": "2025-05-15"
  }
