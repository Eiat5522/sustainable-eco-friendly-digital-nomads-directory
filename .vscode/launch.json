{
    "configurations": [
    vsc
        {
            "args": [
                "--extensionDevelopmentPath=${workspaceFolder}"
            ],
            "name": "Launch Extension",
            "outFiles": [
                "${workspaceFolder}/out/**/*.js"
            ],
            "preLaunchTask": "npm",
            "request": "launch",
            "type": "extensionHost"
        },

        
        {
            "name": "Attach to Edge",
            "port": 9222,
            "request": "attach",
            "type": "msedge",
            "webRoot": "${workspaceFolder}"
        },
        
        {
            "type": "node",
            "request": "launch",
            "name": "Debug Next.js App",
            "program": "${workspaceFolder}/app-next-directory/${input:entryFile}",
            "cwd": "${workspaceFolder}/app-next-directory",
            "runtimeExecutable": "npm",
            "runtimeArgs": [
                "run",
                "dev"
            ],
            "console": "integratedTerminal"
        },
        {
            "type": "msedge",
            "name": "Launch Microsoft Edge",
            "request": "launch",
            "runtimeArgs": [
                "--remote-debugging-port=9222"
            ],
            "url": "c:\\Users\\Dev\\.vscode\\extensions\\ms-edgedevtools.vscode-edge-devtools-2.1.9\\out\\startpage\\index.html",
            "presentation": {
                "hidden": true
            }
        },
        {
            "type": "msedge",
            "name": "Launch Microsoft Edge in headless mode",
            "request": "launch",
            "runtimeArgs": [
                "--headless",
                "--remote-debugging-port=9222"
            ],
            "url": "c:\\Users\\Dev\\.vscode\\extensions\\ms-edgedevtools.vscode-edge-devtools-2.1.9\\out\\startpage\\index.html",
            "presentation": {
                "hidden": true
            }
        },
        {
            "type": "chrome",
            "name": "Open Edge DevTools",
            "request": "attach",
            "url": "c:\\Users\\Dev\\.vscode\\extensions\\ms-edgedevtools.vscode-edge-devtools-2.1.9\\out\\startpage\\index.html",
            "presentation": {
                "hidden": false
            }
        }
    ],
    "inputs": [
        {
            "id": "entryFile",
            "type": "promptString",
            "description": "Enter the entry file for your Next.js app (e.g., server.js or index.js)"
        }
    ]
}