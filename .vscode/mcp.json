{
  "servers": {
    "FileSystem": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-filesystem",
        "${workspaceFolder}"
      ],
      "disabled": false,
      "autoApprove": [
        "list_allowed_directories"
      ]
    },
    "Desktop-Commander": {
      "command": "npx",
      "args": [
        "-y",
        "@wonderwhy-er/desktop-commander",
        "D://Eiat_Folder/MyProjects/MyOtherProjects/sustainable-eco-friendly-digital-nomads-directory",
        "D://Eiat_Folder/MyProjects/MyOtherProjects/sustainable-eco-friendly-digital-nomads-directory/app-next-directory",
        "D://Eiat_Folder/MyProjects/MyOtherProjects/sustainable-eco-friendly-digital-nomads-directory/sanity"
      ],
      "type": "stdio",
      "disabled": true
    },
    "chroma": { // Runs the version last installed via uvx (typically Prod)
      "command": "uvx",
      "args": [
        "chroma-mcp-server",
        "--client-type=persistent",
        "--embedding-function=default" // Example: Choose your embedding function
      ],
      "env": {
        "CHROMA_DATA_DIR": "D:/Eiat_Folder/AppData/Local/Cline/MCP/ChromaDB", // Replace with your actual path
        "CHROMA_LOG_DIR":  "D:/Eiat_Folder/AppData/Local/Cline/MCP/ChromaDB",
        "LOG_LEVEL": "INFO",
        "MCP_LOG_LEVEL": "INFO"
      }
    },
    "chain-of-thought": {
      "command": "npx",
      "args": ["-y", "mcp-chain-of-thought"],
      "env": {
        "DATA_DIR": "${workspaceFolder}:/.vscode/chain-of-thought-mcp-data",
        "ENABLE_THOUGHT_CHAIN": "true",
        "TEMPLATES_USE": "en",
        "ENABLE_GUI": "true",
        "ENABLE_DETAILED_MODE": "true"
      }
    },
  }
}