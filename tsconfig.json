{
  "compilerOptions": {
    "target": "ES6",
    "module": "NodeNext",
    "strict": true,
    "esModuleInterop": true,
    "allowJs": false,
    "noEmit": true,
    "composite": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "nodenext",
    "baseUrl": ".",
    "jsx": "react-jsx",
    "paths": {
      "@/*": ["./src/*"],
      "@app-next/types/*": ["app-next-directory/src/types/*"],
      "@app-next/types/listings": ["app-next-directory/src/types/listings.ts"]
    },
    "lib": ["dom", "dom.iterable", "esnext"]
  },
  "include": [
    "tests/**/*",
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ],
  "references": [
    { "path": "./sanity"}
  ]
}
